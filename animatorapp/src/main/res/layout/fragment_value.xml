<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.ct.animator.handler.AnimatorHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_value_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handler::startSimpleValueAnim}"
            android:text="构建简单Value动画" />

        <Button
            android:id="@+id/btn_value_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{handler::startCarValueAnim}"
            android:text="操作一个对象" />



    </LinearLayout>
</layout>
