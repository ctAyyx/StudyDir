<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_ipcHome_binder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用Binder进行跨进程通讯" />

    <Button
        android:id="@+id/btn_ipcHome_aidl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用AIDL进行跨进程通讯--ComponentName" />

    <Button
        android:id="@+id/btn_ipcHome_aidl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用AIDL进行跨进程通讯--Action" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="以下方法在与远程服务建立连接后调用" />

    <Button
        android:id="@+id/btn_ipcHome_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="求和" />

    <Button
        android:id="@+id/btn_ipcHome_obj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="针对自定义对象传递" />

    <Button
        android:id="@+id/btn_ipcHome_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="针对List数据传递" />


    <Button
        android:id="@+id/btn_ipcHome_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="针对Map数据传递" />

    <Button
        android:id="@+id/btn_ipcHome_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="远程回调" />

    <Button
        android:id="@+id/btn_ipcHome_socket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用Socket" />
</LinearLayout>