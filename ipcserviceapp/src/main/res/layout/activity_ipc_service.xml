<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_ipcService_binder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="本地测试binder通讯" />

    <Button
        android:id="@+id/btn_ipcService_unbinder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="断开本地测试binder通讯" />

    <Button
        android:id="@+id/btn_ipcService_messenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="绑定Messenger实现跨进程通讯" />
    <Button
        android:id="@+id/btn_ipcService_messenger_sendMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用Messenger实现跨进程通讯" />
    <Button
        android:id="@+id/btn_ipcService_unMessenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="断开Messenger服务" />

</LinearLayout>